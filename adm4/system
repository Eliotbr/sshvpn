	   tput setaf 7 ; tput setab 1 ; tput bold ; echo "Squid3 removido com sucesso !" ; tput sgr0
	   #	   
       rm -rf /usr/local/bin/backup ; tput setaf 7 ; tput setab 1 ; tput bold ; echo "Backup removido com sucesso !" ; tput sgr0
