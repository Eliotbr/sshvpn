d)clear
clear
tput setaf 7 ; tput setab 4 ; tput bold ; printf ' %40s%s%-20s\n' "   ATENÇÃO:    " ; tput sgr0
echo
echo "Se prosseguir com a desinstalação o conteudo do SVM PLUS"
echo "será apagado definitivamente, e a ação, não poderá ser"
