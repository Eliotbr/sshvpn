    if [ -f "/usr/local/bin/badvpn-udpgw" ]
    then
	echo
    tput setaf 7 ; tput setab 1 ; tput bold ; echo "As configurações de ENCAMINHAMENTO UDP já estão ativas!" ; tput sgr0
